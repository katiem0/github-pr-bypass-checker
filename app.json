{
  "name": "GitHub Ruleset Checker",
  "description": "A GitHub App that checks pull requests for ruleset compliance and comments if rules are bypassed.",
  "permissions": {
    "issues": "write",
    "pull_requests": "write",
    "repository": "read",
    "administration": "write",
    "organization_administration": "write",
    "metadata": "read"
  },
  "events": [
    "pull_request",
    "protected_branch",
    "organization"
  ],
  "default_events": [
    "pull_request.closed"
  ],
  "default_permissions": {
    "issues": "write",
    "pull_requests": "write",
    "repository": "read"
  },
  "url": "https://github.com/yourusername/github-ruleset-checker",
  "hook_attributes": {
    "url": "https://yourapp.com/webhook"
  }
}